<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <title>Dashboard</title>

    <!-- General CSS Files -->
    <link rel="stylesheet" href="asset/admin/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/css/iziToast.css">
    <link rel="stylesheet" href="asset/admin/css/style.css">
    <link rel="stylesheet" href="asset/admin/css/components.css">
    <link rel="stylesheet" href="asset/admin/css/custom.css">
</head>

<body>
    <div id="app">
        <div class="main-wrapper">
            <div id="overlay">
                <div class="cv-spinner">
                    <span class="spinner"></span>
                </div>
            </div>

            <!-- Navbar -->
            <%- include('components/navbar') %>
            <!-- Sidebar -->
            <%- include('components/sidebar') %>
            

            <!-- Main Content -->
            <div class="main-content">
                <section class="section">
                    <div class="section-header">
                        <h1>Pending Tickets</h1>
                    </div>

                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-12">
                            <div class="card">
                                <div class="card-body p-0">
                                    <div class="table-responsive">
                                        <table class="table table-striped" id="paymentsTable">
                                            <thead>
                                                <tr>
                                                    <th>Sl</th>
                                                    <th>User</th>
                                                    <th>Issue</th>
                                                    <th>TID</th>
                                                    <th>Date</th>
                                                    <th>Status</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                <!-- Data will be populated here by JavaScript -->
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </div>

        </div>
    </div>

<!-- Confirmation Modal -->
<div class="modal" id="confirmModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Action</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to accept this payment?</p>
                <label for="confirmComment">Comment</label>
                <textarea id="confirmComment" class="form-control" rows="2" placeholder="Enter a comment">Thanks! For Subscribing</textarea>
                
                <!-- Irreversible warning note -->
                <p class="text-danger font-weight-bold mt-2">This process is irreversible.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="confirmAccept">Accept</button>
            </div>
        </div>
    </div>
</div>


<!-- Reject Modal -->
<div class="modal" id="rejectModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Rejection</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to reject this payment?</p>
                <label for="rejectComment">Comment</label>
                <textarea id="rejectComment" class="form-control" rows="2" placeholder="Enter a comment">Sorry! We can't Verify</textarea>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmReject">Reject</button>
            </div>
        </div>
    </div>
</div>


<!-- Details Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" role="dialog" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel">Details</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <!-- Content will be injected here by JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


    <!-- General JS Scripts -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <script src="asset/admin/js/bootstrap.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/izitoast/1.4.0/js/iziToast.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/feather-icons@4.28.0/dist/feather.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.nicescroll/3.7.6/jquery.nicescroll.min.js"></script>
    <script src="asset/admin/js/scripts.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.9.4/dist/Chart.min.js"></script>

    <script>
        $(document).ready(function () {
            // Fetch pending payments
            $.ajax({
                url: '/investments/status',
                method: 'GET',
                data: { status: 'pending' },
                success: function (data) {
                    const tbody = $('#paymentsTable tbody');
                    tbody.empty(); // Clear existing data
    
                    // Check if data is empty
                    if (data.length === 0) {
                        tbody.append('<tr><td colspan="7" class="text-center">No pending payments found.</td></tr>');
                        return;
                    }
    
                    // Populate the table with fetched data
                    data.forEach((item, index) => {
                        tbody.append(`
                            <tr>
                                <td>${index + 1}</td>
                                <td>${item.username}</td>
                                <td>$${item.amount}</td>
                                <td>${item.TID}</td>
                                <td>${new Date(item.timestamp).toLocaleDateString()}</td>
                                <td><span class="badge badge-warning">Pending</span></td>
                                <td>
                                    <button class="btn btn-md btn-info details" invest-id="${item._id}">Details</button>
                                    <button class="btn text-white btn-md btn-primary accept" invest-id="${item._id}">Accept</button>
                                    <button class="btn text-white btn-md btn-danger reject" invest-id="${item._id}">Reject</button>
                                </td>
                            </tr>
                        `);
                    });
                },
                error: function (xhr, status, error) {
                    console.error(error);
                    iziToast.error({
                        title: 'Error',
                        message: 'Could not fetch pending tickets!',
                        position: 'topRight'
                    });
                }
            });
    
            // Handle Accept button click
            $(document).on('click', '.accept', function () {
                const investId = $(this).attr('invest-id'); // Get investment ID
                $('#confirmModal').data('invest-id', investId).modal('show'); // Store ID in modal data
            });
    
            // Handle Reject button click
            $(document).on('click', '.reject', function () {
                const investId = $(this).attr('invest-id'); // Get investment ID
                $('#rejectModal').data('invest-id', investId).modal('show'); // Store ID in modal data
            });
    
            // Handle Details button click
            $(document).on('click', '.details', function () {
                const investId = $(this).attr('invest-id');
    
                // Fetch details for the selected investment
                $.ajax({
                    url: `/investments/${investId}`,
                    method: 'GET',
                    success: function (item) {
                        let imgPath = `https://cashcrown.org/${item.screenshot.slice(7)}`;
                        // Prepare the modal content
                        const modalContent = `
                            <div class="modal-header">
                                <h5 class="modal-title">TID: ${item.TID}</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                <p><strong>Username:</strong> ${item.username}</p>
                                <p><strong>Transaction Hash:</strong> ${item.transactionHash}</p>
                                <p><strong>Plan:</strong> ${item.plan.charAt(0).toUpperCase() + item.plan.slice(1)}</p>
                                <p><strong>Amount:</strong> $${item.amount}</p>
                                <p><strong>Date:</strong> ${new Date(item.timestamp).toLocaleDateString()}</p>
                                <p><strong>Status:</strong> <span class="badge badge-warning">Pending</span></p>
                                <p><strong>Screenshot:</strong></p>
                                <img src="${imgPath}" alt="Screenshot" class="img-fluid" style="max-height: 300px; object-fit: cover;">
                                <div class="mt-2">
                                    <a href="${imgPath}" target="_blank" class="btn btn-primary">Open Image in New Tab</a>
                                </div>
                            </div>
                        `;
    
                        // Set modal content and show the modal
                        $('#detailsModal .modal-content').html(modalContent);
                        $('#detailsModal').modal('show');
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        iziToast.error({
                            title: 'Error',
                            message: 'Could not fetch payment details!',
                            position: 'topRight'
                        });
                    }
                });
            });
    
            // Handle Confirm Accept button click
            $('#confirmAccept').on('click', function () {
                const investId = $('#confirmModal').data('invest-id'); // Retrieve investment ID
                const comment = $('#confirmComment').val();
                
                if (comment.trim() === "") {
                    iziToast.error({
                        title: 'Error',
                        message: 'Comment cannot be empty!',
                        position: 'topRight'
                    });
                    return;
                }
    
                // Call the investment control route
                $.ajax({
                    url: `/investmentControl/${investId}?status=active&comment=${encodeURIComponent(comment)}`,
                    method: 'PUT',
                    success: function (response) {
                        $('#confirmModal').modal('hide'); // Hide the confirm modal
                        iziToast.success({
                            title: 'Success',
                            message: 'Payment accepted successfully!',
                            position: 'topRight'
                        });
                        // Optionally, refresh the payments table or remove the row
                        location.reload(); // Reload the page to refresh the table
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        iziToast.error({
                            title: 'Error',
                            message: 'Could not accept the payment!',
                            position: 'topRight'
                        });
                    }
                });
            });
    
            // Handle Confirm Reject button click
            $('#confirmReject').on('click', function () {
                const investId = $('#rejectModal').data('invest-id'); // Retrieve investment ID
                const comment = $('#rejectComment').val();
                
                if (comment.trim() === "") {
                    iziToast.error({
                        title: 'Error',
                        message: 'Comment cannot be empty!',
                        position: 'topRight'
                    });
                    return;
                }
    
                // Call the investment control route
                $.ajax({
                    url: `/investmentControl/${investId}?status=rejected&comment=${encodeURIComponent(comment)}`,
                    method: 'PUT',
                    success: function (response) {
                        $('#rejectModal').modal('hide'); // Hide the reject modal
                        iziToast.success({
                            title: 'Rejected',
                            message: 'Payment rejected successfully!',
                            position: 'topRight'
                        });
                        // Optionally, refresh the payments table or remove the row
                        location.reload(); // Reload the page to refresh the table
                    },
                    error: function (xhr, status, error) {
                        console.error(error);
                        iziToast.error({
                            title: 'Error',
                            message: 'Could not reject the payment!',
                            position: 'topRight'
                        });
                    }
                });
            });
        });
    </script>
    
    
    
    
</body>

</html>
