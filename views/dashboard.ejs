    <script>
        $(document).ready(function () {
    // Fetch and update all data when the page loads
    fetchAndCalculateData();

    function fetchAndCalculateData() {
        // Fetch data from all three routes concurrently
        Promise.all([
            fetch('/allusers').then(res => res.json()),
            fetch('/alltickets').then(res => res.json()),
        ])
        .then(([users, tickets]) => {


            // Update HTML elements with calculated values
            $('#total_users').text(users.length);
            $('#deactive_users').text(users.length);
            $('#pending_tickets').text(tickets.filter(ticket => ticket.status === 'Open').length);
            $('#resolved_tickets').text(tickets.filter(ticket => ticket.status === 'Resolved').length);

        })
        .catch(error => {
            console.error('Error fetching data:', error);
            iziToast.error({
                title: 'Error',
                message: 'Could not fetch data',
                position: 'topRight'
            });
        });
    }
});

    </script>
    
