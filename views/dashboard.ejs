    <script>
        $(document).ready(function () {
    // Fetch and update all data when the page loads
    // fetchAndCalculateData();

    function fetchAndCalculateData() {
        // Fetch data from all three routes concurrently
        Promise.all([
            fetch('/allusers').then(res => res.json()),
            fetch('/investments').then(res => res.json()),
            fetch('/withdrawals').then(res => res.json())
        ])
        .then(([users, investments, withdrawals]) => {
            // Initialize counters
            let totalUsers = 0;
            let totalProfit = 0;
            let activeUsers = 0;
            let deactiveUsers = 0;
            let totalInvest = 0;
            let pendingInvest = 0;
            let totalWithdraw = 0;
            let pendingWithdraw = 0;

            // Process users data
            totalUsers = users.length;
            users.forEach(user => {
                totalProfit += user.profit || 0;
                if (user.active) {
                    activeUsers++;
                } else {
                    deactiveUsers++;
                }
            });

            // Process investments data
            investments.forEach(investment => {
                if (investment.status === 'active' || investment.status === 'canceled') {
                    totalInvest += investment.amount || 0;
                } else if (investment.status === 'pending') {
                    pendingInvest += investment.amount || 0;
                }
            });

            // Process withdrawals data
            withdrawals.forEach(withdrawal => {
                if (withdrawal.status === 'completed') {
                    totalWithdraw += withdrawal.amount || 0;
                } else if (withdrawal.status === 'pending') {
                    pendingWithdraw += withdrawal.amount || 0;
                }
            });

            // Update HTML elements with calculated values
            $('#total_users').text(totalUsers);
            $('#total_profit').text(`${totalProfit}`);
            $('#active_users').text(activeUsers);
            $('#deactive_users').text(deactiveUsers);
            $('#total_invest').text(`${totalInvest}`);
            $('#pending_invest').text(`${pendingInvest}`);
            $('#total_withdraw').text(`${totalWithdraw}`);
            $('#pending_withdraw').text(`${pendingWithdraw}`);
        })
        .catch(error => {
            console.error('Error fetching data:', error);
            iziToast.error({
                title: 'Error',
                message: 'Could not fetch data',
                position: 'topRight'
            });
        });
    }
});

    </script>
    
